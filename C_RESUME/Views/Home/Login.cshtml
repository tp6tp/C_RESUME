<body class="text-center" style="background-color:#DFDFDF">
    <br>
    <br>
    <div class="cont">
        
            @using (Html.BeginForm("Logins", "Home"))
            {
                <div class="form sign-in">
                    <h2>Welcome!</h2>
                    @Html.ValidationSummary(true)
                    <label class="">
                        <span>帳　  號</span>
                        @Html.TextBoxFor(x => x.Account)
                        @Html.ValidationMessageFor(x => x.Account, "", new{ @class="text-danger"})
                    </label>
                    <label>
                        <span>密　  碼</span>
                        @Html.TextBoxFor(x => x.Password)
                        @Html.ValidationMessageFor(x => x.Password, "", new{ @class="text-danger"})
                    </label>
                    <p class="forgot-pass"><a href="#">Forgot password?</a></p>
                    <button id="signin" type="submit" class="submit">Sign In</button>
                </div>
            }
        
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h3>沒有帳戶, 請註冊!</h3>
                </div>
                <div class="img__text m--in">

                    <h3>已有帳戶直接登入即可</h3>
                </div>
                <div class="img__btn">
                    <span class="m--up">註　冊</span>
                    <span class="m--in">登　入</span>
                </div>
            </div>
            @using (Html.BeginForm("", "Home"))
            {
                @Html.ValidationSummary(true)
                <div class="form sign-up">
                    <h2>建立您的帳戶</h2>
                    <label>
                        <span>帳戶名稱</span>
                        @Html.TextBoxFor(x => x.reAccName)
                        @Html.ValidationMessageFor(x => x.reAccName, "", new{ @class="text-danger"})
                    </label>
                    <label>
                        <span>帳　  號</span>
                        @Html.TextBoxFor(x => x.reAccount)
                        @Html.ValidationMessageFor(x => x.reAccount, "", new{ @class="text-danger"})
                    </label>
                    <label>
                        <span>Email</span>
                        @Html.TextBoxFor(x => x.reEmail)
                        @Html.ValidationMessageFor(x => x.reEmail, "", new{ @class="text-danger"})
                    </label>
                    <label>
                        <span>密　  碼</span>
                        @Html.TextBoxFor(x => x.rePassword)
                        @Html.ValidationMessageFor(x => x.rePassword, "", new{ @class="text-danger"})
                    </label>
                    <label>
                        <span>確認密碼</span>
                        @Html.TextBoxFor(x => x.reConfirmPassword)
                        @Html.ValidationMessageFor(x => x.reConfirmPassword, "", new{ @class="text-danger"})
                    </label>
                    <button type="submit" class="submit" id="signup">Sign Up</button>
                </div>
            }
            
        </div>
    </div>
